layout: false
name: "12345"
---
<% 
  page.name = "Home"
%>
<%- partial('_partial/head') %>

<body>
  <header id="header">
    <%- partial('_partial/header', {name: "Home"}) %>
    
    <div id="contact-info-wrapper">
      <p id="my-name">Hey! I'm Junkai Yang.</p>
      
      <div id="social-wrapper">
        <%- partial('_partial/social') %>
      </div>
    
      <div id="more-wrapper">
        <i class="fa fa-angle-down" aria-hidden="true"></i>
      </div>
    </div>
  </header>

  <div id="intro-container" class="block-container block-container-gray">
    <div class="inner">
      <div class="content-wrapper">
          <h2 class="content-title">Someting about me</h2>
          <p class="content-text">
          <%- site.data["about"]["introduction"] %>
          </p>
          <div class="content-learn-more">
            <a href="<%- url_for('about') %>" class="btn btn-default btn-lg">LEARN MORE</a>
          </div>
        </div>
    </div>
  </div>

  <div id="work-container" class="block-container">
    <div  class="inner">
    <div class="content-wrapper">
        <h2 class="content-title">My works</h2>
        <div class="work-wrapper">
           <% for (var i= 0 ; i < site.data["works"].length ; i++) {%>
            <% if(site.data["works"][i].important) {%>
              <%- partial('_partial/work_intro', {work: site.data.works[i]} ) %>
            <% } %>
            <% } %>
        </div>
        <div class="content-learn-more"><a href="<%- url_for('/works')%>" class="btn btn-default btn-lg">LEARN MORE</a>
        </div>
    </div>
  </div>
  
</div>

    
  <footer id="footer" class="inner"><%- partial('_partial/footer') %></footer>
  <%- partial('_partial/after_footer') %>
</body>
</html>

